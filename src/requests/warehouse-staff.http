Host: app.xycargo.com
Connection: keep-alive
Content-Type: application/json

{
    "warehouse_id": 1,
    "firstName": "John",
    "lastName": "Doe",
    "email": "john.doe@xycargo.com",
    "phone": "+233501234567",
    "password_hash": "$2y$10$hashedpasswordhere",
    "role": "Manager",
    "status": "active",
    "profile_picture": "https://example.com/profile.jpg"
}

