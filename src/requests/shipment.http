### CREATE NEW SHIPMENT
POST http://app.xycargo.com/v1/shipments HTTP/1.1
Host: app.xycargo.com
Connection: keep-alive
Content-Type: application/json

{
    "origin_country": "Ghana",
    "destination_country": "USA",
    "departure_date": "2025-10-21 08:00:00",
    "arrival_date": "2025-10-30 18:00:00",
    "priority": "express",
    "warehouse_id": 1,
    "expected_delivery": "2025-10-31 12:00:00",
    "notes": "Handle with care"
}

### RESPONSE

{
  "status": "success",
  "code": 201,
  "shipment": {
    "shipment_id": 1,
    "tracking_number": "SHPXXXXXXXXXXXX",
    "origin_country": "Ghana",
    "destination_country": "USA",
    "departure_date": "2025-10-21 08:00:00",
    "arrival_date": "2025-10-30 18:00:00",
    "status": "pending",
    "priority": "express",
    "warehouse_id": 1,
    "shipped_at": null,
    "expected_delivery": "2025-10-31 12:00:00",
    "delivered_at": null,
    "notes": "Handle with care",
    "created_at": "2025-10-20 14:00:00",
    "updated_at": "2025-10-20 14:00:00"
  },
  "message": "Shipment created successfully"
}

