## === APP CONFIG ===
APP_NAME="YourAppName"
APP_ENV=development
APP_URL=http://localhost
APP_DEBUG=true
APP_LOG_LEVEL=debug
APP_TIMEZONE=UTC
APP_LOCALE=en

## === REMOTE DATABASE CONFIG ===
PROD_DB_ADAPTER=mysql
PROD_DB_HOST=127.0.0.1
PROD_DB_PORT=3306
PROD_DB_DATABASE=your_database
PROD_DB_USERNAME=your_db_user
PROD_DB_PASSWORD=your_db_password
PROD_DB_SSL=false
PROD_DB_CHARSET=utf8mb4
PROD_DB_COLLATION=utf8mb4_unicode_ci
PROD_DB_DRIVER=mysql

## === LOCAL DATABASE CONFIG ===
LOCAL_DB_ADAPTER=mysql
LOCAL_DB_HOST=127.0.0.1
LOCAL_DB_PORT=3306
LOCAL_DB_DATABASE=your_database
LOCAL_DB_USERNAME=your_db_user
LOCAL_DB_PASSWORD=your_db_password
LOCAL_DB_SSL=false
LOCAL_DB_CHARSET=utf8mb4
LOCAL_DB_COLLATION=utf8mb4_unicode_ci
LOCAL_DB_DRIVER=mysql

## === JWT / AUTH ===
JWT_SECRET=base64:YourJWTSecretKey
JWT_ALGORITHM=HS256
JWT_ISSUER=http://localhost
JWT_EXPIRE=3600

## === PAYMENT GATEWAY CONFIG ===
PAYMENT_PUBLIC_KEY=your_payment_public_key
PAYMENT_SECRET_KEY=your_payment_secret_key
PAYMENT_WEBHOOK_SECRET=your_payment_webhook_secret
PAYMENT_CALLBACK_URL=http://localhost/api/payment/callback

## === SMS GATEWAY ===
SMS_API_URL=https://api.smsprovider.com/send
SMS_API_KEY=your_sms_gateway_key
SMS_SENDER_ID=YourSenderID

## === EMAIL CONFIG ===
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=587
MAIL_USERNAME=your_smtp_username
MAIL_PASSWORD=your_smtp_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourapp.com
MAIL_FROM_NAME="YourAppName"

## === STORAGE / BACKUP ===
STORAGE_DRIVER=local
STORAGE_BACKUP_PATH=/path/to/backups/
MAX_UPLOAD_SIZE_MB=100

## === AUDIT LOGGING ===
ENABLE_AUDIT_LOG=true
AUDIT_LOG_PATH=/var/log/yourapp/audit.log

## === SYNC & NODE CONFIG (for agent sync nodes) ===
NODE_ID=your_node_id
NODE_SYNC_SECRET=your_node_sync_secret
ALLOW_NODE_PUSH=true
ALLOW_NODE_PULL=true

## === FRONTEND CONFIG ===
FRONTEND_URL=http://localhost:3000

## === MISC ===
TIMEZONE=UTC
CURRENCY=USD
